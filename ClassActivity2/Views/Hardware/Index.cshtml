@model ClassActivity2.ViewModels.HardwareVM
@using ClassActivity2.ViewModels
@using System.Globalization
@using System.Data
@{
    ViewBag.Title = "Index";
}

<h1>Stock Purchased from Vendor:</h1>
<div class="criteria">
    @using (Html.BeginForm("DoReport", "Hardware", FormMethod.Post))
    {
        <label>Select Vendor</label>
        @Html.DropDownListFor()
        <label>From</label>
        @Html.TextBoxFor(m => m.DateFrom, "yyyy-MM-dd", new { @Value = "2013-08-01", @type = "date", @class = "form-control" })
        <label>To</label>
        @Html.TextBoxFor(m => m.DateTo, "yyyy-MM-dd", new { @Value = "2013-08-30", @type = "date", @class = "form-control" })
        <br />
        <input type="submit" value="Generate" class="btn btn-primary" />
    }
</div>
